    <script>
        // ========== é…ç½®åŒºåŸŸ - è¯·æ ¹æ®éœ€è¦é€‰æ‹©é€šçŸ¥æ–¹å¼ ==========
        
        // æ–¹å¼1: ä½¿ç”¨Serveré…±ï¼ˆæ¨èï¼Œå…è´¹å‘é€å¾®ä¿¡é€šçŸ¥ï¼‰
        // è®¿é—® https://sct.ftqq.com/ æ³¨å†Œå¹¶è·å–SendKey
        const SERVER_CHAN_KEY = 'SCT314 811TZ6saYXG980yggOkqjFAWDLK1'; // å¡«å…¥ä½ çš„SendKeyï¼Œå¦‚ï¼š'SCT123456abcdef'
        
        // æ–¹å¼2: ä½¿ç”¨çŸ­ä¿¡APIï¼ˆéœ€è¦ä»˜è´¹ï¼‰
        // è¿™é‡Œä»¥é˜¿é‡Œäº‘çŸ­ä¿¡ä¸ºä¾‹ï¼Œä½ ä¹Ÿå¯ä»¥ç”¨è…¾è®¯äº‘ç­‰
        const SMS_CONFIG = {
            enabled: false,  // æ˜¯å¦å¯ç”¨çŸ­ä¿¡
            phone: '',       // çˆ¸çˆ¸çš„æ‰‹æœºå·ï¼Œå¦‚ï¼š'13800138000'
            // APIé…ç½®éœ€è¦åœ¨åç«¯å®ç°
        };

        // ========== é€šçŸ¥åŠŸèƒ½ ==========
        
        // å‘é€å¾®ä¿¡é€šçŸ¥ï¼ˆé€šè¿‡Serveré…±ï¼‰
        async function sendWechatNotification(data) {
            if (!SERVER_CHAN_KEY) {
                console.log('æœªé…ç½®Serveré…±ï¼Œè·³è¿‡å¾®ä¿¡é€šçŸ¥');
                return;
            }

            const title = 'ã€è€å…µç»´ä¿®é“ºã€‘æ–°ç»´ä¿®ç”³è¯·';
            const content = `
å§“åï¼š${data.name}
ç”µè¯ï¼š${data.phone}
ç”µå™¨ï¼š${data.appliance}
é—®é¢˜ï¼š${data.problem}

æ—¶é—´ï¼š${new Date().toLocaleString('zh-CN')}

è¯·åŠæ—¶æŸ¥çœ‹å¹¶è”ç³»å®¢æˆ·ï¼
            `.trim();

            try {
                const response = await fetch(`https://sctapi.ftqq.com/${SERVER_CHAN_KEY}.send`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `title=${encodeURIComponent(title)}&desp=${encodeURIComponent(content)}`
                });

                const result = await response.json();
                if (result.code === 0) {
                    console.log('å¾®ä¿¡é€šçŸ¥å‘é€æˆåŠŸ');
                } else {
                    console.error('å¾®ä¿¡é€šçŸ¥å‘é€å¤±è´¥:', result);
                }
            } catch (error) {
                console.error('å‘é€å¾®ä¿¡é€šçŸ¥æ—¶å‡ºé”™:', error);
            }
        }

        // å‘é€çŸ­ä¿¡é€šçŸ¥ï¼ˆç¤ºä¾‹å‡½æ•°ï¼Œéœ€è¦åç«¯æ”¯æŒï¼‰
        async function sendSMSNotification(data) {
            if (!SMS_CONFIG.enabled || !SMS_CONFIG.phone) {
                console.log('çŸ­ä¿¡åŠŸèƒ½æœªå¯ç”¨');
                return;
            }

            // è¿™é‡Œéœ€è¦è°ƒç”¨ä½ çš„åç«¯APIæ¥å‘é€çŸ­ä¿¡
            // å› ä¸ºçŸ­ä¿¡APIéœ€è¦å¯†é’¥ï¼Œä¸èƒ½ç›´æ¥åœ¨å‰ç«¯è°ƒç”¨
            const message = `ã€è€å…µç»´ä¿®é“ºã€‘æ–°è®¢å•ï¼š${data.name}çš„${data.appliance}éœ€è¦ç»´ä¿®ï¼Œè¯·åŠæ—¶æŸ¥çœ‹`;
            
            console.log('çŸ­ä¿¡å†…å®¹:', message);
            // å®é™…å‘é€éœ€è¦åç«¯APIæ”¯æŒ
            // await fetch('ä½ çš„åç«¯APIåœ°å€', { ... });
        }

        // ========== ç»Ÿè®¡æ•°æ®å­˜å‚¨ ==========
        
        const STORAGE_KEY = 'veteran_repair_stats';

        // åˆå§‹åŒ–æˆ–è·å–ç»Ÿè®¡æ•°æ®
        function getStats() {
            const stats = localStorage.getItem(STORAGE_KEY);
            if (stats) {
                return JSON.parse(stats);
            }
            // åˆå§‹æ•°æ®ï¼šç´¯è®¡ç»´ä¿®28æ¬¡ï¼ŒæœåŠ¡12äºº
            return {
                total: 28,
                peopleServed: 12,
                records: []
            };
        }

        // ä¿å­˜ç»Ÿè®¡æ•°æ®
        function saveStats(stats) {
            localStorage.setItem(STORAGE_KEY, JSON.stringify(stats));
        }

        // æ›´æ–°æ˜¾ç¤º
        function updateDisplay() {
            const stats = getStats();

            // æ›´æ–°ç»Ÿè®¡æ•°å­—
            document.getElementById('totalRepairs').textContent = stats.total;
            document.getElementById('helpedPeople').textContent = stats.peopleServed || stats.total;
        }

        // æ·»åŠ ç»´ä¿®è®°å½•
        function addRepairRecord(data) {
            const stats = getStats();
            const now = new Date();
            
            stats.total++;
            stats.peopleServed = (stats.peopleServed || 0) + 1;
            stats.records.push({
                date: now.toISOString(),
                ...data
            });
            
            saveStats(stats);
            updateDisplay();
        }

        // è¡¨å•æäº¤
        document.getElementById('repairForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = {
                name: document.getElementById('name').value,
                phone: document.getElementById('phone').value,
                appliance: document.getElementById('appliance').value,
                problem: document.getElementById('problem').value
            };
            
            // æ·»åŠ ç»´ä¿®è®°å½•
            addRepairRecord(formData);
            
            // å‘é€é€šçŸ¥
            await sendWechatNotification(formData);
            await sendSMSNotification(formData);
            
            // æ˜¾ç¤ºæˆåŠŸæ¶ˆæ¯
            document.getElementById('successMessage').style.display = 'block';
            document.getElementById('successMessage').scrollIntoView({ behavior: 'smooth' });
            
            // 3ç§’åé‡ç½®è¡¨å•å’Œéšè—æˆåŠŸæ¶ˆæ¯
            setTimeout(function() {
                document.getElementById('repairForm').reset();
                document.getElementById('successMessage').style.display = 'none';
            }, 3000);
        });

        // é¡µé¢åŠ è½½æ—¶æ›´æ–°æ˜¾ç¤º
        updateDisplay();
    </script>
